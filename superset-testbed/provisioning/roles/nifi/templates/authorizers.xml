<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<authorizers>
    <userGroupProvider>
        <identifier>file-user-group-provider</identifier>
        <class>org.apache.nifi.authorization.FileUserGroupProvider</class>
        <property name="Users File">./conf/users.xml</property>
        <property name="Legacy Authorized Users File"></property>
        <property name="Initial User Identity 1">cn=admin,ou=people,dc=testbed,dc=lan</property>

        <property name="Initial User Identity 2">CN=kmod-nifi1.testbed.lan</property>
        <property name="Initial User Identity 3">CN=kmod-nifi2.testbed.lan</property>
        <property name="Initial User Identity 4">CN=kmod-nifi3.testbed.lan</property>
    </userGroupProvider>

    <accessPolicyProvider>
        <identifier>file-access-policy-provider</identifier>
        <class>org.apache.nifi.authorization.FileAccessPolicyProvider</class>
        <property name="User Group Provider">file-user-group-provider</property>
        <property name="Authorizations File">./conf/authorizations.xml</property>
        <property name="Initial Admin Identity">cn=admin,ou=people,dc=testbed,dc=lan</property>
        <property name="Legacy Authorized Users File"></property>
        <property name="Node Identity 1">CN=kmod-nifi1.testbed.lan</property>
        <property name="Node Identity 2">CN=kmod-nifi2.testbed.lan</property>
        <property name="Node Identity 3">CN=kmod-nifi3.testbed.lan</property>
    </accessPolicyProvider>

    <authorizer>
        <identifier>managed-authorizer</identifier>
        <class>org.apache.nifi.authorization.StandardManagedAuthorizer</class>
        <property name="Access Policy Provider">file-access-policy-provider</property>
    </authorizer>

</authorizers>
